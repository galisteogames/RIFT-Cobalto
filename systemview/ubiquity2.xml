	</carousel>
    <text name="logoText">
         <fontPath>./../_inc/fonts/Helvetica Neue Regular.otf</fontPath>
		<color>FFFFFFFA</color>
		<fontSize>0.034</fontSize>
				<text>${system.fullName}</text>
	    <forceUppercase>false</forceUppercase>
		<glowSize>1</glowSize>
		<glowOffset>1</glowOffset>
    </text>
	      <image name="logo">
		 <path>./../assets/logos/$system.png</path>
		 <path>./../assets/logos/$system.svg</path>
	  	 <path>./../assets/logos/white/$system.png</path>
	  	 <path>./../assets/logos/white/$system.svg</path>

		 <opacity>0.9</opacity>
		 <linearSmooth>true</linearSmooth>


			<storyboard event="activate" repeatAt="1">
				<animation property="opacity" to="1" begin="0" duration="0" mode="linear"/>
				<animation property="scale" from="1" to="1.05" begin="0" duration="1000" mode="easeOut"/>
				<animation property="scale" from="1.05" to="1" begin="1000" duration="1000" mode="easeOut"/>
			</storyboard>
			
			<storyboard event="scroll">
				<animation property="opacity" from="0" to="0.2" duration="0" mode="Linear"/>
				<animation property="scale" from="1" to="0.75" begin="0" duration="1000" mode="easeOut"/>
			</storyboard>
			
		</image>
		
      <image name="personagem" extra="true">
         <origin>0 0</origin>
         <pos>0.06 0</pos>
         <size>1 1</size>
		 <linearSmooth>true</linearSmooth>
		 <path>./../assets/artes/chars/$system.png</path>
         <zIndex>49</zIndex>

		 
		 		<storyboard repeatAt="3000">
        		<animation property="y" from="2" begin="0" duration="650" mode="linear"/>
        		<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
        		<animation property="scale" to="1.02" begin="650" autoreverse="true" duration="900" repeat="forever" mode="bump"/>

			<!-------------------------------------------------------------------------------------------------------->
				
				<animation property="color" from="ff000050" to="ff000050" begin="3000" duration="" mode="linear"/>
				<animation property="origin" to="0.001 0.001" begin="3000" duration="" mode="linear"/>

				<animation property="color" to="ffffff" begin="3100" duration="150" mode="linear"/>
				<animation property="origin" to="0 0" begin="3100" duration="150" mode="linear"/>

			<!-------------------------------------------------------------------------------------------------------->

				<animation property="color" from="ff000050" to="ff000050" begin="5000" duration="" mode="linear"/>
				<animation property="origin" to="0.001 0.001" begin="5000" duration="" mode="linear"/>

				<animation property="color" to="ffffff" begin="5050" duration="50" mode="linear"/>
				<animation property="origin" to="0 0" begin="5050" duration="50" mode="linear"/>
				
				<animation property="color" from="ff000050" to="ff000050" begin="5150" duration="" mode="linear"/>
				<animation property="origin" to="0 0" begin="5150" duration="" mode="linear"/>

				<animation property="color" to="ffffff" begin="5200" duration="50" mode="linear"/>
				<animation property="origin" to="0 0" begin="5200" duration="50" mode="linear"/>
				
			<!-------------------------------------------------------------------------------------------------------->

				<animation property="color" from="ff000050" to="ff000050" begin="9000" duration="" mode="linear"/>
				<animation property="origin" to="0.001 0.001" begin="9000" duration="" mode="linear"/>

				<animation property="color" to="ffffff" begin="9050" duration="50" mode="linear"/>
				<animation property="origin" to="0 0" begin="9050" duration="50" mode="linear"/>
				
				<animation property="color" from="ff000050" to="ff000050" begin="9150" duration="" mode="linear"/>
				<animation property="origin" to="0 0" begin="9150" duration="" mode="linear"/>

				<animation property="color" to="ffffff" begin="9200" duration="50" mode="linear"/>
				<animation property="origin" to="0 0" begin="9200" duration="50" mode="linear"/>

			<!-------------------------------------------------------------------------------------------------------->

				<animation property="color" from="ff000050" to="ff000050" begin="9500" duration="" mode="linear"/>
				<animation property="origin" to="0.001 0.001" begin="9500" duration="" mode="linear"/>

				<animation property="color" to="ffffff" begin="9550" duration="50" mode="linear"/>
				<animation property="origin" to="0 0" begin="9550" duration="50" mode="linear"/>				

			<!-------------------------------------------------------------------------------------------------------->

				<animation property="color" to="ffffff" begin="9700" duration="5000" mode="linear"/>
				<animation property="origin" from="0 0" to="0 0" begin="9700" duration="5000" mode="linear"/>			
		</storyboard>
